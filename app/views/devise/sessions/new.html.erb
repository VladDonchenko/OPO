<div style="text-align: center; color: white;" >
</br>
</br>
</br>
<h2>Вхід</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "btn btn-outline-dark", style: "color: white"%>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class: "btn btn-outline-dark", style: "color: white"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , "Запам'ятати мене"%>
    </div>
  <% end %>
  </br>
</br>

  <div class="actions">
    <%= f.submit "Вхід", class: "btn btn-outline-dark", style: "color: white"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
