<div class="container pt-5">
  <div class="row pt-5">
    <div class="col-sm-12 col-12">
      <div class="card h-100" style="position: relative;">
        <% Category.roots.each do |category| %>
          <div class="card h-100" style="position: relative;">
            <%= link_to category do %>
              <div class="card bg-dark text-dark">
                <img src="<%= category.image %>" class="card-img-top" alt="Card image cap" style="object-fit: cover; height: 300px;">
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); color: white; text-align: center;">
                  <h1 class="card-title" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"><%= category.title %></h1>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
